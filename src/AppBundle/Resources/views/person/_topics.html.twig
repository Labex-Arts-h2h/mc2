<section id="topics" class="card row">
    <div class="col s12">

        {#<p>Plusieurs r√©ponses possibles</p>#}

        <!-- Genres -->

        <article class="col s12">

            <h2 class="center">Topics</h2>

            <!-- Genres Modal Structure -->
            <div id="modal_genre" class="modal modal-fixed-footer">
                <div class="modal-content">
                    <h3>Topics</h3>
                    <div class="row s12">

                        <article class="col s6">
                            <h4>{{ person.name }}</h4>
                            <table class="striped mini-table tablesorter">
                                <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Numbers</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for item in genre  %}
                                    <tr>
                                        <td>{{ item.title }}</td>
                                        <td>{{ item.nb }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>

                            </table>
                        </article>

                        <article class="col s6">

                            <h4>All numbers</h4>
                            <table class="striped mini-table tablesorter">
                                <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Numbers</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for item in genres  %}
                                    <tr>
                                        <td>{{ item.title }}</td>
                                        <td>{{ item.nb }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </article>


                    </div>
                </div>
            </div>

            <div class="row">
                <article class="col s6">
                    <h4 class="center">For {{ person.name }}</h4>
                    <div class="wordcloud" id="genre"></div>
                </article>

                <article class="col s6">
                    <h4 class="center">For all numbers</h4>
                    <div class="wordcloud" id="genres"></div>
                </article>
            </div>
            <!-- Genre Modal Trigger -->
            <div class="row ">

                <article class="col s12 ">
                    <p class="center">
                        <a class="modal-trigger black-text " href="#modal_genre">
                            More informations about genres
                            <i class="material-icons">more</i>
                        </a>

                    </p>
                </article>
            </div>
        </article>
        <hr>

