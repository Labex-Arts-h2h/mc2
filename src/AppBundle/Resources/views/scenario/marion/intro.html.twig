{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('css/scenario/marion.css')}}">
{% endblock %}

{% block body %}

    <section class="container">
        <h1>Music</h1>

        <div class="row">


            <!-- 1) Number of songs -->

            <article class="col s12">

                <!-- Genres Modal Structure -->
                <div id="modal_all_songs" class="modal modal-fixed-footer">
                    <div class="modal-content">
                        <h3>Tunes</h3>
                        <div class="row s12">

                            <article class="col s12">

                                <table class="highlight tablesorter mini-table">
                                    <thead>
                                    <tr>
                                        <th>Title of the tune</th>
                                        {#<th>Date</th>#}
                                        <th>Nb of Production Numbers using this Tune</th>
                                        <th>Nb of Films using this Tune</th>
                                        {#<th>Nb of Films using this Tune in a danced Number</th>#}
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for item in songs  %}
                                        {% if item.title is not null %}
                                            <tr>
                                                <td><a href="{{ path('song' , { 'songId' : item.songId }) }}">{{ item.title }}</a></td> <!-- lien vers une notice de stageshow -->
                                                {#<td>{{ item.date }}</td>#}
                                                <td>{{ item.nb }}</td>
                                                <td>{{ item.nbFilms }}</td>
                                            </tr>
                                        {% else %}
                                        {% endif %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </article>

                        </div>
                    </div>
                </div>

                <!-- Visualisations -->
                <div class="card">
                <article class="col m12 s12 valign-wrapper">
                    <div>
                        <div class="big-card">
                            <p class="center"><span class="huge">{{ songs|length }}</span> tunes saved in <span class="strong">{{ global.nbNumber }}</span> numbers in <span class="strong">{{ global.nbFilm }}</span> films</p>
                        </div>
                    </div>

                </article>


                <article class="col m12 s12 valign-wrapper">
                    <div>
                        <div class="big-card">
                            <p class="center"><span class="huge">{{ danceNumbers|length }}</span> danced numbers in <span class="strong">{{ danceFilms|length }}</span> films</p>

                        </div>
                    </div>
                </article>
                </div>

                <!-- Genre Modal Trigger -->
                <div class="row">

                    <article class="col s12 center more">
                            <a class="modal-trigger black-text" href="#modal_all_songs">
                                + More informations
                                {#<i class="material-icons">more</i>#}
                            </a>
                    </article>
                </div>

            </article>


            <!---------------------------->
            <!-- 2) Songs with two films -->
            <!---------------------------->

            <article class="col s12">

                <!-- Genres Modal Structure -->
                <div id="modal_songs" class="modal modal-fixed-footer">
                    <div class="modal-content">
                        <div class="row s12">

                            <h3>Tunes appearing in at least 2 films</h3>

                            <article class="col s12">

                                <table class="highlight tablesorter mini-table">
                                    <thead>
                                    <tr>
                                        <th>Title of the tune</th>
                                        <th>Nb of films using this tune</th>
                                        <th>Nb of numbers using this tune</th>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for item in songWithMultipleFilms  %}
                                        {% if item.title is not null %}
                                            <tr>
                                                <td><a href="{{ path('song' , { 'songId' : item.songId }) }}">{{ item.title }}</a></td>
                                                <td>{{ item.nbFilm }}</td>
                                                <td>{{ item.nbNumber }}</td>
                                            </tr>
                                        {% else %}
                                        {% endif %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </article>

                        </div>
                    </div>
                </div>

                <!-- Visualisations -->
                <div class="card">
                <article class="col m12 s12 valign-wrapper">
                    <div>
                        <div class="big-card">
                            <p class="center"><span class="huge">{{ songWithMultipleFilms|length }}</span> tunes appearing in at least 2 films <br>in a corpus of <span class="huge">{{ listFilmsWith2Songs|length }}</span> films</p>

                        </div>
                    </div>

                </article>

                <!-- Genre Modal Trigger -->

                <div class="row">

                    <article class="col s12 center more">
                        <a class="modal-trigger black-text" href="#modal_songs">
                            + More informations
                            {#<i class="material-icons">more</i>#}
                        </a>
                    </article>

                    <article class="card col m12 s12 valign-wrapper">
                        <div>
                            <div class="big-card">

                                <p class="center"><span class="huge">{{ listeSongsWithFilms2SongsAndDance|length }}</span> tunes danced in at least 2 films in a corpus of<br><span class="huge">{{ listeFilmsWith2SongsAndDance|length }}</span> films</p>

                            </div>
                        </div>

                    </article>
                </div>

            </article>


