{% extends "base.html.twig" %}

{% block body %}

    <section class="container">
        <h1>{{ name|upper }}</h1>


        <article class="card row">
            <div class="col s12">
                <h2>Numbers</h2>

                <p>La liste des numbers où {{ name }} apparait.</p>
                <p><span class="number">{{ numbers|length }}</span> numbers</p>

                {% for item in numbers  %}
                    {{ item.title }}
                {% endfor %}

            </div>
        </article>

        <article class="card row">
            <div class="col s12">

                <h2>Temps de présence du performer dans les numbers </h2>


                <p>Nombre de films avec des numbers où est présent(e) {{ name|capitalize }}: <span class="number">{{ lengthTotal|length}}</span></p>


                <h3>Liste des films ordonnés chronologiquement par film.released avec le total en seconde de la durée de tous les numbers du film (même ceux où {{ name }} n'est pas présent(e))</h3>


                {% for item in lengthTotal  %}
                <p>{{ item.title }}, total = {{ item.total }}</p>
                {% endfor %}

                <h3>Liste des films ordonnés chronologiquement par film.released avec le total en seconde de la durée des numbers du film où {{ name }} est présent(e)</h3>

                {% for item in lengthTotalForPerson  %}
                    <p>{{ item.title }} : {{ item.total }}</p>
                {% endfor %}

                <h3>Ratio de la durée d'un performer / durée totale des numbers pour chaque film </h3>

                <p>Temps de présence dans les numbers de chaque film de {{ name }} (= ratio de number où {{ name }} est présent(e)</p>
                {% for item in ratio  %}
                <p>{{ item.title }}({{ item.released }}) : {{ ((item.one / item.all)*100)|round()  }}%</p>
                {% endfor %}

            </div>
        </article>

        <article class="card row">
            <div class="col s12">
                <h2>Ratio performance type</h2>
                <div class="row">

                    <div class="col s6">
                        <h3>All</h3>
                        {% for item in performances  %}
                            {{ item.title }}({{ item.nb }})<br>
                        {% endfor %}
                    </div>

                    <div class="col s6">
                        <h3>For {{ name }}</h3>
                        {% for item in performance  %}
                            {{ item.title }}({{ item.nb }})<br>
                        {% endfor %}
                    </div>
                </div>
            </div>

        </article>

        <article class="card row">
            <div class="col s12">
                <h2>Structure</h2>

                <div class="row">
                    <div class="col s6">

                        <p>Nb structures :  {{ structures_total.total }}</p>

                        <h3>All</h3>

                        {% for item in structures  %}
                            {{ item.title }}({{ item.nb }})
                        {% endfor %}
                    </div>

                    <div class="col s6">
                        <h3>For {{ name }}</h3>
                        {% for item in structure  %}
                            {{ item.title }}({{ item.nb }})
                        {% endfor %}
                    </div>
                </div>
            </div>
        </article>


        <article class="card row">
            <div class="col s12">
                <h2>Shots</h2>
                {% for item in avgShotForPerson  %}
                    {{ item.average }}
                {% endfor %}
            </div>
        </article>

        <article class="card row">
            <div class="col s12">
                <h2>Sources</h2>

                <div class="row">
                    <div class="col s6">
                        <h3>All</h3>
                        {% for item in sources  %}
                            {{ item.title }}({{ item.nb }})
                        {% endfor %}
                    </div>

                    <div class="col s6">
                        <h3>For {{ name }}</h3>
                        {% for item in source  %}
                            {{ item.title }}({{ item.nb }})
                        {% endfor %}
                    </div>
                </div>
            </div>
        </article>

        <article class="card row">
            <div class="col s12">
                <h2>Topics</h2>
                <p>Plusieurs réponses possibles / pas de camembert</p>
                <div class="row">
                    <div class="col s6">
                        <h3>All</h3>
                        {% for item in genres  %}
                            {{ item.title }}({{ item.nb }})
                        {% endfor %}
                    </div>

                    <div class="col s6">
                        <h3>For {{ name }}</h3>
                        {% for item in genre  %}
                            {{ item.title }}({{ item.nb }})
                        {% endfor %}
                    </div>
                </div>
            </div>
        </article>

        <article class="card row">
            <div class="col s12">
                <h2>Diegetic</h2>

                <div class="row">
                    <div class="col s6">
                        <h3>All</h3>
                        {% for item in diegetics  %}
                            {{ item.title }}({{ item.nb }})
                        {% endfor %}
                    </div>

                    <div class="col s6">
                        <h3>For {{ name }}</h3>
                        {% for item in diegetic  %}
                            {{ item.title }}({{ item.nb }})
                        {% endfor %}
                    </div>
                </div>
            </div>
        </article>

        <article class="card row">
            <div class="col s12">
                <h2>Dancing types</h2>

                <div class="row">
                    <div class="col s12">
                        <h3>For {{ name }}</h3>
                        {% for item in dancing  %}
                            {{ item.title }}({{ item.nb }})
                        {% endfor %}
                    </div>
                </div>
            </div>
        </article>

        <article class="card row">
            <div class="col s12">
                <h2>Musical types</h2>

                <div class="row">
                    <div class="col s12">
                        <h3>For {{ name }}</h3>
                        {% for item in musical  %}
                            {{ item.title }}({{ item.nb }})
                        {% endfor %}
                    </div>
                </div>
            </div>
        </article>

        <article class="card row">
            <div class="col s12">
                <h2>Completeness</h2>

                <div class="row">
                    <div class="col s12">
                        <h3>For {{ name }}</h3>
                        {% for item in completeness  %}
                            {{ item.title }}({{ item.nb }})
                        {% endfor %}
                    </div>

                    <div class="col s12">
                        <p>Ratio : {{ ((complete.nb * 100)/completes.nb) }}</p>
                    </div>
                </div>
            </div>
        </article>


        <article class="card row">
            <div class="col s12">
                <h2>Solos</h2>

                <div class="row">
                    <div class="col s12">
                        <h3>Multiple occurences</h3>
                        <p>Ratio : {{ occurences.nb }} / {{ completOptions.nb }} = {{ ((occurences.nb * 100)/completOptions.nb) }}</p>
                    </div>

                </div>
            </div>
        </article>

        <article class="card row">
            <div class="col s12">
                <h2>Solos</h2>

                <div class="row">
                    <div class="col s6">
                        <h3>All</h3>

                    </div>

                    <div class="col s6">
                        <h3>For {{ name }}</h3>

                    </div>
                </div>
            </div>
        </article>

    </section>


{% endblock %}