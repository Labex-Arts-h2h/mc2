<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Disc" table="disc">
    <id name="discId" type="integer" column="disc_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Titre du disque (pas  de la chanson)</option>
      </options>
    </field>
    <field name="reference" type="string" column="reference" length="9999" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="obc" type="string" column="obc" length="45" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Original Broadway Cast (Y/N)</option>
      </options>
    </field>
    <field name="date" type="integer" column="date" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <many-to-many field="song" target-entity="Song" mapped-by="disc" fetch="LAZY"/>
    <many-to-many field="musical" target-entity="Musical" mapped-by="disc" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
