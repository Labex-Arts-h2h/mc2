<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\State" table="state">
    <id name="stateId" type="integer" column="state_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nom" type="string" column="nom" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Les lieux où le film a été censuré.</option>
      </options>
    </field>
    <field name="lat" type="float" column="lat" precision="10" scale="0" nullable="true"/>
    <field name="long" type="float" column="long" precision="10" scale="0" nullable="true">
      <options>
        <option name="comment">Géolocalisation au cas où (ne sera pas à remplir manuellement)</option>
      </options>
    </field>
    <many-to-many field="film" target-entity="Film" mapped-by="state" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
