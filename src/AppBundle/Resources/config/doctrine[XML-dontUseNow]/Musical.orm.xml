<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Musical" table="musical">
    <id name="musicalId" type="integer" column="musical_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="45" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">nom du micro-style</option>
      </options>
    </field>
    <field name="type" type="string" column="type" length="45" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Selon le thésaurus, on saura la grande famille à laquelle appartient le micro-style :
-American jazz and popular
-Historical popular stage</option>
      </options>
    </field>
    <many-to-many field="stagenumber" target-entity="Stagenumber" inversed-by="musical" fetch="LAZY">
      <join-table name="musical_has_stagenumber">
        <join-columns>
          <join-column name="musical_id" referenced-column-name="musical_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="stageNumber_id" referenced-column-name="stageNumber_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="radio" target-entity="Radio" inversed-by="musical" fetch="LAZY">
      <join-table name="musical_has_radio">
        <join-columns>
          <join-column name="musical_id" referenced-column-name="musical_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="radio_id" referenced-column-name="radio_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="number" target-entity="Number" inversed-by="musical" fetch="LAZY">
      <join-table name="musical_has_number">
        <join-columns>
          <join-column name="musical_id" referenced-column-name="musical_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="number_id" referenced-column-name="number_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="disc" target-entity="Disc" inversed-by="musical" fetch="LAZY">
      <join-table name="musical_has_disc">
        <join-columns>
          <join-column name="musical_id" referenced-column-name="musical_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="disc_id" referenced-column-name="disc_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="tv" target-entity="Tv" inversed-by="musical" fetch="LAZY">
      <join-table name="musical_has_tv">
        <join-columns>
          <join-column name="musical_id" referenced-column-name="musical_id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="TV_id" referenced-column-name="TV_id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
