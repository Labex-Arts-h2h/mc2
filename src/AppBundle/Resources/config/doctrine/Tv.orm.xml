<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Tv" table="TV">
    <id name="tvId" type="integer" column="TV_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="date" type="date" column="date" nullable="true"/>
    <field name="title" type="string" column="title" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Le nom éventuel du spectacle adapté
</option>
      </options>
    </field>
    <field name="tvShow" type="string" column="tv_show" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Le nom  de l’émission</option>
      </options>
    </field>
    <field name="type" type="string" column="type" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Type d’émission:</option>
      </options>
    </field>
    <many-to-many field="song" target-entity="Song" mapped-by="tv" fetch="LAZY"/>
    <many-to-many field="musical" target-entity="Musical" mapped-by="tv" fetch="LAZY"/>
    <many-to-many field="dancing" target-entity="Dancing" mapped-by="tv" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
