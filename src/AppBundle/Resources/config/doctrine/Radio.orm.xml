<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Radio" table="radio">
    <id name="radioId" type="integer" column="radio_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="type" type="string" column="type" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Type d’émission
- adaptation de Broadway
- variété</option>
      </options>
    </field>
    <field name="showTitle" type="string" column="show_title" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="radioShow" type="string" column="radio_show" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="date" type="date" column="date" nullable="true"/>
    <many-to-many field="song" target-entity="Song" mapped-by="radio" fetch="LAZY"/>
    <many-to-many field="musical" target-entity="Musical" mapped-by="radio" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
