<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Thesaurus" table="thesaurus">
    <id name="thesaurusId" type="integer" column="thesaurus_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="500" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="type" type="string" column="type" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">table correspondante</option>
      </options>
    </field>
    <field name="comment" type="text" column="comment" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="link" type="string" column="link" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Exemple</option>
      </options>
    </field>
    <field name="definition" type="text" column="definition" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="example" type="text" column="example" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="category" type="string" column="category" length="500" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">famille de l'item</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
