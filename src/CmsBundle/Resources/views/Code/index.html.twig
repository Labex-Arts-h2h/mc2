{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h1>Codes list</h1>

        <table class="table striped">
            <thead>
                <tr>
                    <th>Codeid</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Description</th>
                    <th>Date_creation</th>
                    <th>Last_update</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for code in codes %}
                <tr>
                    <td><a href="{{ path('admin_code_show', { 'codeId': code.codeId }) }}">{{ code.codeId }}</a></td>
                    <td>{{ code.title }}</td>
                    <td>{{ code.content }}</td>
                    <td>{{ code.description }}</td>
                    <td>{% if code.datecreation %}{{ code.datecreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if code.lastupdate %}{{ code.lastupdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_code_show', { 'codeId': code.codeId }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_code_edit', { 'codeId': code.codeId }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
