                <td>{{ film.foreignRentals }}</td>
                <td>{{ film.totalRentals }}</td>
                <td>{{ film.usBoxoffice }}</td>
                <td>{{ film.foreignBoxoffice }}</td>
                <td>{{ film.totalBoxoffice }}</td>
                <td>{{ film.sourceEco }}</td>
                <td>{{ film.archives }}</td>
                <td>{{ film.deleted }}</td>
                <td>{{ film.adaptation }}</td>
                <td>{{ film.remake }}</td>
                <td>{{ film.song }}</td>
                <td>{{ film.numberMedley }}</td>
                <td>{{ film.numberCompletenessIdcompleteness }}</td>
                <td>{{ film.numberEnsembleMusic }}</td>
                <td>{{ film.numberEnsembleDance }}</td>
