                <td>{{ film.released }}</td>
                <td>{{ film.notes }}</td>
                <td>{{ film.idImdb }}</td>
                <td>{{ film.studio }}</td>
                <td>{{ film.distributor }}</td>
                <td>{{ film.color }}</td>
                <td>{{ film.ratio }}</td>
                <td>{{ film.length }}</td>
