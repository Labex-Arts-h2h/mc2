                <td>{{ film.pcaTexte }}</td>
                <td>{{ film.legion }}</td>
                <td>{{ film.protestant }}</td>
                <td>{{ film.harrisson }}</td>
                <td>{{ film.bord }}</td>
                <td>{{ film.filmId }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('editeur_film_show', { 'id': film.filmId }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('editeur_film_edit', { 'id': film.filmId }) }}">edit</a>
                        </li>
                    </ul>
