{% extends 'editor/base.html.twig' %}

{% block fos_user_content %}{% endblock %}
{% block stylesheets %}

<style>
.items li{
  margin-bottom: 5px;
  background-color:white; 
  color : #CC0000;
  border:  1px solid #CC0000;
}
</style>

{% endblock %}


{% block body %}


<section class='container'>

<div class="row">
  <div class="col s9">
    <h2>Find a movie</h2>
    <p>Order by alphabetical order | Order by date</p>
    <ul class="items">
    {% for film in films %}
      <a href="/editor/film/{{film.filmId}}"><li class="btn" >{{film.title}}({{film.released}})</li></a>
    {% endfor %}
    </ul>
  </div>
  <div class='col s3'>
    <h2>Filters</h2>

    <article>
      <h3>Title</h3>
      <input type="text">
    </article>
    
    <article>
      <h3>Released date</h3>
      <input type="text">
    </article>

    <article>
      <h3></h3>
    </article>

  </div>
</div>

</section>
  

{% endblock %}