{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .menu li{
            padding-left: 15px;
            cursor:pointer;
        }
    </style>
{% endblock %}

{% block body %}

<div class="container-fluid row">

    <section class="col s3 menu">
        <h3>Navigation</h3>
        <li >Title</li>
        <li>Outlines</li>
        <li>Structure</li>
        <li>Shots</li>
        <li>Performers</li>
        <li>Backstage & integration</li>
        <li>Themes</li>
        <li>Tone</li>
        <li>Dance</li>
        <li>Music</li>
        <li>Intertextuality / References</li>
        <li>Complement</li>
    </section>

    <section class="col s8">

        <h1>{{number.title}}</h1>

        {{ form_start(numberForm)}}

        {{ include('editor/number/_form.html.twig')}}

        <button class="btn black" type="submit" novalidate>Save</button>
        <button class="btn black" type="submit" novalidate>Save & Exit</button>

        {{ form_end(numberForm)}}
    </section>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        //		$(".menu li:not(.active)").hide();

        $(".menu li").click(function(){
            $(".menu li").removeClass("active");
            $(this).addClass("active");

            var nbItem = $(this ).index();
            $(".cartouche").hide();
            $("form .cartouche:nth-child("+nbItem+")").fadeIn();
        });
    </script>

{% endblock %}