<section id="topics" class="card row">
    <div class="col s12">

        {#<p>Plusieurs r√©ponses possibles</p>#}

        <!-- Genres -->

        <article class="col s12">

            <h2 class="center">Genres</h2>

            <!-- Genres Modal Structure -->
            <div id="modal1" class="modal modal-fixed-footer">
                <div class="modal-content">
                    <h3>Genres</h3>
                    <div class="row s12">

                        <article class="col s6">
                            <h4>For {{ person.name }}</h4>
                            <table class="striped mini-table">
                                <tr>
                                    <th>Title</th>
                                    <th>Numbers</th>
                                </tr>


                                {% for item in genre  %}
                                    <tr>
                                        <td>{{ item.title }}</td>
                                        <td>{{ item.nb }}</td>
                                    </tr>
                                {% endfor %}

                            </table>
                        </article>

                        <article class="col s6">

                            <h4>For all persons</h4>
                            <table class="striped mini-table">
                                <tr>
                                    <th>Title</th>
                                    <th>Numbers</th>
                                </tr>
                                {% for item in genres  %}
                                    <tr>
                                        <td>{{ item.title }}</td>
                                        <td>{{ item.nb }}</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </article>


                    </div>
                </div>
            </div>

            <div class="row">
                <article class="col s6">
                    <h4 class="center">For {{ person.name }}</h4>
                    <div class="wordcloud" id="genre"></div>
                </article>

                <article class="col s6">
                    <h4 class="center">For all persons</h4>
                    <div class="wordcloud" id="genres"></div>
                </article>
            </div>
            <!-- Genre Modal Trigger -->
            <div class="row ">

                <article class="col s12 ">
                    <p class="center">
                        <a class="modal-trigger black-text " href="#modal1">
                            More informations about genres
                            <i class="material-icons">more</i>
                        </a>

                    </p>
                </article>
            </div>
        </article>
        <hr>

